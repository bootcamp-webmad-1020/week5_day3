<div class="container">

    <h1>Todos los restaurantes</h1>

    <div class="row">

        <div class="col-md-8">
            <div id="restaurantsMap"></div>
        </div>

        <div class="col-md-4">
            <ul>
                {{#each restaurants}}
                <li>
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                    <hr>
                </li>
                {{/each}}
            </ul>
        </div>

    </div>

    <a href="/" class="btn btn-dark">Volver a inicio</a>

</div>

